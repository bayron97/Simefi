                  iEntero = momento.getMonth()+1;
                  if(iEntero==1){ mes="Enero";}
                  else if(iEntero==2){mes="Febrero";}
                  else if(iEntero==3){mes="Marzo";}
                  else if(iEntero==4){mes="Abril";}
                  else if(iEntero==5){mes="Mayo";}
                  else if(iEntero==6){mes="Junio";}
                  else if(iEntero==7){mes="Julio";}
                  else if(iEntero==8){mes="Agosto";}
                  else if(iEntero==9){mes="Septiembre";}
                  else if(iEntero==10){mes="Octubre";}
                  else if(iEntero==11){mes="Noviembre";}
                  else {mes="Diciembre";}
                  sFecha = sFecha + "-" + mes;
                  iEntero = momento.getYear() + 1900;
                  sFecha = sFecha + "-" + String.valueOf(iEntero);
